---
import Layout from '../layouts/Layout.astro';
import PaddedContentBox from "../components/PaddedContentBox.astro";

const makingwebsite_content = import.meta.glob('/src/content/makingwebsite/*.mdx',
    {eager: true})
const makingwebsite_articles = Object.values(makingwebsite_content)

---

<Layout>
    <PaddedContentBox class="bg-white">
        <h2 class="text-2xl">Artikelen</h2>
        <ul class="list-disc">
            {makingwebsite_articles.map((article: any) =>
                    <li><a
                            href={
                                article.url.replace("src/", "/2425/lmfehres/").replace(".mdx", "")
                            }
                    >{article.title}</a></li>
            )}
        </ul>
    </PaddedContentBox>
</Layout>
